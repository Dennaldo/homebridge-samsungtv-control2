    "node-upnp": "^1.2.0",
    "node-upnp-remote": "^1.2.0",
    "samsung-remote": "git+https://github.com/mmende/samsung-remote-models-2014-and-newer.git",
    "samsung-tv-control": "^1.10.0",
    "ssdp-ts": "^3.2.6"
  },
  "devDependencies": {
